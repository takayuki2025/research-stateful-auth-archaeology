{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://atlaskernel.local/schema/entity_analysis.v1.json",
  "title": "AtlasKernel EntityAnalysisResult v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "entity_type",
    "raw_value",
    "canonical_value",
    "confidence",
    "decision",
    "explanation",
    "candidates",
    "engine_version"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "entity_analysis.v1"
    },
    "engine_version": {
      "type": "string",
      "minLength": 1
    },
    "entity_type": {
      "type": "string",
      "minLength": 1
    },
    "raw_value": {
      "type": "string",
      "minLength": 1
    },
    "canonical_value": {
      "type": "string",
      "minLength": 1
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "decision": {
      "type": "string",
      "enum": ["auto_accept", "needs_review", "rejected"]
    },
    "explanation": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["rule", "detail"],
        "properties": {
          "rule": { "type": "string", "minLength": 1 },
          "detail": { "type": "string" }
        }
      }
    },
    "candidates": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["value", "score"],
        "properties": {
          "value": { "type": "string", "minLength": 1 },
          "score": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0
          }
        }
      }
    },
    "extensions": {
      "type": "object",
      "description": "Forward-compatible bag for non-breaking additions.",
      "additionalProperties": true
    }
  }
}
