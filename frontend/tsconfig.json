{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": false,
    "noEmit": true,
    "jsx": "preserve",

    // ✔ Next.js が app router の場合でも src を alias の root にする
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    },

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "app",
    "components",
    "hooks",
    "utils",
    "public",
    ".next/types/**/*.ts",
    "types/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    // "types/**/*.d.ts",
    // ".next/types/**/*.ts"
  ]
}
