{
  "family": "occore-prod-api",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "runtimePlatform": {"cpuArchitecture": "X86_64", "operatingSystemFamily": "LINUX"},
  "executionRoleArn": "arn:aws:iam::194191748993:role/ecsTaskExecutionRole-occore-prod",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "194191748993.dkr.ecr.ap-northeast-1.amazonaws.com/occore-api@sha256:0cbf8674e8746c2c7b5ac3a3b5e5d83e79af0a068c34cb9da6524fc0971848a3",
      "essential": true,
      "portMappings": [{"containerPort": 80, "protocol": "tcp"}],

      "command": [
        "sh",
        "-lc",
        "mkdir -p /var/www/backend/config && php -r 'file_put_contents(\"/var/www/backend/config/firebase-service-account.json\", base64_decode(getenv(\"FIREBASE_SERVICE_ACCOUNT_B64\")));' && exec /usr/bin/supervisord -n"
      ],

      "environment": [
        {"name":"APP_ENV","value":"production"},
        {"name":"APP_DEBUG","value":"false"},
        {"name":"LOG_CHANNEL","value":"stderr"},

        {"name":"DB_CONNECTION","value":"mysql"},
        {"name":"DB_HOST","value":"occore-mysql.cnq2664mk1jh.ap-northeast-1.rds.amazonaws.com"},
        {"name":"DB_PORT","value":"3306"},

        {"name":"JWT_PROVIDERS","value":"firebase"},
        {"name":"FIREBASE_PROJECT_ID","value":"takayuki-2025-ver-1"},
        {"name":"FIREBASE_CREDENTIALS","value":"/var/www/backend/config/firebase-service-account.json"},

        {"name":"COGNITO_ISSUER","value":""},
        {"name":"COGNITO_AUDIENCE","value":""}
      ],

      "secrets": [
        {"name":"DB_DATABASE","valueFrom":"arn:aws:secretsmanager:ap-northeast-1:194191748993:secret:occore/prod/db-8ABS2F:DB_DATABASE::"},
        {"name":"DB_USERNAME","valueFrom":"arn:aws:secretsmanager:ap-northeast-1:194191748993:secret:occore/prod/db-8ABS2F:DB_USERNAME::"},
        {"name":"DB_PASSWORD","valueFrom":"arn:aws:secretsmanager:ap-northeast-1:194191748993:secret:occore/prod/db-8ABS2F:DB_PASSWORD::"},

        {"name":"FIREBASE_SERVICE_ACCOUNT_B64","valueFrom":"arn:aws:secretsmanager:ap-northeast-1:194191748993:secret:occore/prod/firebase-dv7LF4:FIREBASE_SERVICE_ACCOUNT_B64::"}
      ],

      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-region": "ap-northeast-1",
          "awslogs-group": "/ecs/occore-prod-api",
          "awslogs-stream-prefix": "api"
        }
      }
    }
  ]
}
