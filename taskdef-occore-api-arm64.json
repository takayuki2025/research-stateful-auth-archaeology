{
  "family": "occore-prod-api",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "runtimePlatform": {
    "cpuArchitecture": "ARM64",
    "operatingSystemFamily": "LINUX"
  },
  "executionRoleArn": "arn:aws:iam::194191748993:role/ecsTaskExecutionRole-occore-prod",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "194191748993.dkr.ecr.ap-northeast-1.amazonaws.com/occore-api@sha256:4c8d0113bb1951c4d5f15bac4ce4ef08e5142e654ddd89ed1a2379991a8eb83a",
      "essential": true,
      "command": ["php","artisan","serve","--host=0.0.0.0","--port=80"],
      "portMappings": [
        {"containerPort": 80, "protocol": "tcp"}
      ],
      "environment": [
        {"name":"APP_ENV","value":"production"},
        {"name":"APP_DEBUG","value":"false"},
        {"name":"LOG_CHANNEL","value":"stderr"},
        {"name":"DB_CONNECTION","value":"mysql"},
        {"name":"DB_HOST","value":"occore-mysql.cnq2664mk1jh.ap-northeast-1.rds.amazonaws.com"},
        {"name":"DB_PORT","value":"3306"}
      ],
      "secrets": [
        {"name":"DB_DATABASE","valueFrom":"arn:aws:secretsmanager:ap-northeast-1:194191748993:secret:occore/prod/db-8ABS2F:DB_DATABASE::"},
        {"name":"DB_USERNAME","valueFrom":"arn:aws:secretsmanager:ap-northeast-1:194191748993:secret:occore/prod/db-8ABS2F:DB_USERNAME::"},
        {"name":"DB_PASSWORD","valueFrom":"arn:aws:secretsmanager:ap-northeast-1:194191748993:secret:occore/prod/db-8ABS2F:DB_PASSWORD::"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-region": "ap-northeast-1",
          "awslogs-group": "/ecs/occore-prod-api",
          "awslogs-stream-prefix": "api"
        }
      }
    }
  ]
}
